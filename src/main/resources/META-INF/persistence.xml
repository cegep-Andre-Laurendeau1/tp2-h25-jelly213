<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="bibliothequePUU">
        <properties>
            <!-- Configuration de la base de données H2 en mémoire -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:tp2Abdessalam;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Dialecte Hibernate pour H2 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

            <!-- Génération automatique des tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Activer les logs des requêtes SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.h2.console.enabled" value="true"/>
            <property name="hibernate.h2.console.path" value="/h2-console"/>

            <!-- 🔍 Debug Hibernate -->
            <property name="hibernate.type" value="trace"/>
        </properties>
    </persistence-unit>

</persistence>